{
  "manifest_version": 3,
  "name": "ResuMakerExtension",
  "version": "1.0.0",
  "description": "A browser extension with a React popup login form and a context menu item.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/resuMaker16.png",
      "32": "icons/resuMaker32.png",
      "48": "icons/resuMaker48.png",
      "128": "icons/resuMaker128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.indeed.com/*"],
      "js": ["injectGenerationContainer.js", "utils.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "contextMenus",
    "storage"
  ],
  "host_permissions": [
    "https://www.indeed.com/*"
  ],
  "icons": {
    "16": "icons/resuMaker16.png",
    "32": "icons/resuMaker32.png",
    "48": "icons/resuMaker48.png",
    "128": "icons/resuMaker128.png"
  }
}
